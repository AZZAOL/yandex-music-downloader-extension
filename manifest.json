{
  "manifest_version": 3,
  "name": "Yandex Music Downloader",
  "version": "1.0",
  "description": "Добавляет кнопку загрузки для треков на Яндекс.Музыке",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webRequest"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost:5000/*",
    "https://*.yandex.ru/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://music.yandex.kz/*", "*://music.yandex.ru/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon48.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
